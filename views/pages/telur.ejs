<div class="container">
    <h4 class="text-dark">Data Telur</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(telur=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-4">
                        <small class="text-black"> <b>Jenis Telur</b></small> <br />
                        <%= telur.Jenis_Telur %>
                    </div>


                    <div class="col-lg-3">
                        <small class="text-black"><b>Stok</b></small> <br />
                        <%= telur.stok %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-black"><b>Harga</b> </small> <br />
                        Rp <%= telur.harga %>

                    </div>

                    <div class="col-lg-2">
                        <small class="text-black"><b>Action</b></small> <br />

                        <!-- button edit -->
                        <a href="/telur/edit/<%= telur.id %>">
                            <button class="btn btn-sm btn-primary" style="background-color: #CA955C">
                                Edit
                            </button>
                        </a>

                         <!-- button delete -->
                        <a href="/telur/delete/<%= telur.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger" style="background-color: #876445">
                                Hapus
                            </button>
                        </a> 

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/telur/add">
        <button class="btn btn-md btn-success" style="background-color: #9F8772" >
            Tambah Data
        </button>
    </a>

</div>
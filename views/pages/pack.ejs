<div class="container">
    <h4 class="text-danger">Data Packaging</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(pack=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-4">
                        <small class="text-warning">Jenis Packaging</small> <br />
                        <%= pack.nama_pack %>
                    </div>
                    <div class="col-lg-4">
                        <small class="text-warning">Harga</small> <br />
                        Rp <%= pack.harga %>
                    </div>
                    <div class="col-lg-4">
                        <small class="text-warning">Action</small> <br />
                        <!-- button edit -->
                        <a href="/bungkus/edit/<%= pack.id %>">
                            <button class="btn btn-sm btn-secondary">
                                Edit
                            </button>
                        </a>
                        <!-- button delete -->
                        <a href="/bungkus/delete/<%= pack.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>
                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/bungkus/add">
        <button class="btn btn-md btn-success">
            Tambah Data
        </button>
    </a>

</div>
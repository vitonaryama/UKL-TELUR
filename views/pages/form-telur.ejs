<div class="container">
    <div class="card">
        <div class="card-header bg-info">
            <h4>Form Telur</h4>
        </div>
        <div class="card-body">
            <form action="<%= targetRoute %>" method="post">
                Jenis
                <input type="text" name="jenis_telur" id="jenis_telur" class="form-control" value="<%= jenis_telur %>" required /> 
                stok
                <input type="number" name="stok" id="stok" class="form-control" value="<%= stok %>" required />
                 Harga
                <input type="number" name="harga" id="harga" class="form-control" value="<%= harga %>" required />

                <script>
                    document.querySelector(`input[name="jenis_telur"]`).value ="<%= jenis_telur %>"
                </script>

                

                <button type="submit" class="btn btn-success mt-2" style="background-color: #9F8772" >
                    Simpan
                </button>
            </form>
        </div>
    </div>
</div>